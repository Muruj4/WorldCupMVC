@model IEnumerable<WorldCup.Models.TableFootball>

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
    <link href='https://fonts.googleapis.com/css?family=Almarai' rel='stylesheet'>
    <title>جدول المباريات</title>
</head>
<body dir="rtl">

    <div class="container text-center mt-4">
        <p class="mt-4"><strong>Welcome To The Match Schedule</strong></p>
    </div>
    <main>
        <div class="container mt-5">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">الرقم</th>
                        <th scope="col">المنتخبات</th>
                        <th scope="col">الملعب</th>
                        <th scope="col">التاريخ</th>
                        <th scope="col">الوقت</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var match in Model)
                    {
                        <tr>
                            <th scope="row">@match.Id</th>
                            <td>@match.Team1 ضد @match.Team2</td>
                           
                            <td>@match.MatchTime.ToString("dd MMMM yyyy")</td>
                            <td>@match.MatchTime.ToString("HH:mm tt")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

</body>
</html>
