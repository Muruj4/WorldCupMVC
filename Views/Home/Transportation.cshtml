@model List<WorldCup.Models.Transportation>

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Almarai' rel='stylesheet'>
    <title>وسائل النقل</title>
</head>
<body>
    <main>
        <div class="container text-center">
            <p class="mt-4"><strong>Welcome To Transportation Page</strong></p>

            <div class="row justify-content-center">
                @foreach (var transportation in Model)
                {
                    <div class="col-md-4">
                        <div class="card" style="max-width: 350px; margin: 1rem auto; border: 1px solid #ccc; box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);">
                            <div class="card-body text-center">
                                <h3 class="card-title">@transportation.Name</h3>
                                <img src="/@transportation.Image" alt="@transportation.Name" style="max-width: 100%; height: auto;">
                                <p class="card-text">موديل: @transportation.Model</p>
                                <p class="card-text">السعة: @transportation.Capacity</p>
                                <a href="#" class="btn btn-primary">احجز رحلة</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
