
@{
}
<div class="container">
	<div class=" row">
		<div class=" col">
			<div class=" card">
				<div class=" card-body">
					<div class="row">
						<div class=" col">
							<table class=" table text-center">
								<thead class=" text-center">
									<tr class=" text-center">
										<td class=" text-center">رقم فئة النقل</td>
										<td class =" text-center">اسم فئة النقل</td>
										<td class=" text-center" colspan="2">اجراء</td>
									</tr>
								</thead>
								<tbody>
									@foreach (var i in Model)
									{
										<tr class=" text-center">
											<td>@i.Id</td>
											<td>@i.Name</td>
											<td>

												<a onclick="showmessage(@i.Id)"><i class=" fa fa-trash text-danger" aria-hidden="true"></i></a>

											</td>
											<td>
												<a asp-action="edit_categories" asp-route-id="@i.Id"> <i class=" fa fa-pencil text-success" aria-hidden="true"></i></a>

											</td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>