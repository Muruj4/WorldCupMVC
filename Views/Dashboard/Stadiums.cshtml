@model IEnumerable<Stadiums>

@{
    <script type="importmap"></script>

    <link href="~/assets/css/common.min.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/styles/all-themes.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Cairo' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="~/lib/sweetalert2/sweetalert2.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/lib/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/main.js"></script>
}


<div class="container">
    <!-- Form Section -->
    <div class="row mt-5">
        <div class="col">
            <div class="card mt-5">
                <div class="card-body">
                    <form asp-action="CreateNewStadium" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col">
                                <label class="form-label">اسم الملعب</label>
                                <input type="text" name="Name" class="form-control" />
                              
                            </div>
                            <div class="col">
                                <label class="form-label">السعة</label>
                                <input type="number" name="Capacity" class="form-control" />
                            
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">المدينة</label>
                                <select name="City" class="form-control">
                                    <option value="">اختر المدينة</option>
                                    <option value="الرياض">الرياض</option>
                                    <option value="جدة">جدة</option>
                                    <option value="الدمام">الدمام</option>
                                    <option value="بريدة">بريدة</option>
                                    <option value="نيوم">نيوم</option>
                                    <option value="أبها">أبها</option>
                                    <option value="مكة المكرمة">مكة المكرمة</option>
                                </select>
                                
                            </div>
                            <div class="col">
                                <label class="form-label">نوع الملعب</label>
                                <input type="text" name="Type" class="form-control" />
                          
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">تاريخ الإنشاء</label>
                                <input type="date" name="ConstractionDate" class="form-control" placeholder="سنة/شهر/يوم" />
                               
                            </div>

                            <div class="col">
                                <label class="form-label">المالك</label>
                                <input type="text" name="Owner" class="form-control" />
                            
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">الطول</label>
                                <input type="number" step="0.01" name="Length" class="form-control" />
                              
                            </div>
                            <div class="col">
                                <label class="form-label">العرض</label>
                                <input type="number" step="0.01" name="Width" class="form-control" />
                                
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class="form-label">الارتفاع</label>
                                <input type="number" step="0.01" name="Height" class="form-control" />
                               
                            </div>
                            <div class="col">
                                <label class="form-label">صورة الملعب</label>
                                <input type="file" name="photo" class="form-control" />
             
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <label class=" form-label">تفاصيل اخرى</label>
                                <input type="text" name="Facility" class="form-control" />
                               
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col text-center">
                                <button type="submit" class="btn btn-primary">حفظ</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
     <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <td class=" text-center">رقم الملعب</td>
                                <td class=" text-center">اسم الملعب</td>
                                <td class=" text-center">السعة</td>
                                <td class=" text-center">المدينة</td>
                                <td class =" text-center">نوع الملعب</td>
                                <td class=" text-center">تاريخ الإنشاء</td>
                                <td class=" text-center">المالك</td>
                                <td class =" text-center">الطول</td>
                                <td class =" text-center">العرض</td>
                                <td class=" text-center">الارتفاع</td>
                                <td class=" text-center">صورة الملعب</td>
                                <td class="text-center" colspan="2">إجراء</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stadium in Model)
                            {
                                <tr>
                                    <td class=" text-center">@stadium.Id</td>
                                    <td class=" text-center">@stadium.Name</td>
                                    <td class=" text-center"> @stadium.Capacity</td>
                                    <td class=" text-center">@stadium.City</td>
                                    <td class=" text-center">@stadium.Type</td>
                                    <td class=" text-center">@stadium.ConstractionDate.ToString("yyyy-MM-dd")</td>
                                    <td class=" text-center">@stadium.Owner</td>
                                    <td class=" text-center">@stadium.Length</td>
                                    <td class=" text-center">@stadium.Width</td>
                                    <td class=" text-center">@stadium.Height</td>
                                    

                                    <td><img src="/images/@stadium.Image" width="60" height="60" class="rounded rounded-circle" /></td>
                                    <td>

                                        <a asp-action="DeleteStadium" asp-route-id="@stadium.Id">
                                            <i class="fa fa-trash text-danger" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-action="edit_stadiums" asp-route-id="@stadium.Id">
                                            <i class="fa fa-pencil text-success" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

                        

