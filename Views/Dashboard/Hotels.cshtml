
@model IEnumerable<Hotels> 
@{
	Layout = "~/Views/Shared/_LayoutsAdmin.cshtml";
}
<div class="modal" tabindex="-1" id="del">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> تأكيد الحذف</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>هل انت متأكد من رغبتك بحذف السجل</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">الغاء الحذف</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="confirmdelete2()"> حذف</button>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class=" row mt-5">
        <div class=" col">
            <div class=" card mt-5">
                <div class="card-body ">
                    <form asp-action="CreateNewHotels" method="post" enctype="multipart/form-data">
                        <div class=" row">
                            <div class=" col">
                                <label class=" form-label">اسم الفندق</label>
                                <input type="text" name="Name" class="form-control" />
                            </div>
                            <div class=" col">
                                <label class=" form-label">وصف الفندق</label>
                                <input type="text" name="Description" class="form-control" />
                            </div>
                        </div>
                        <div class=" row">
                            <div class=" col">
                                <label class=" form-label">صورة الفندق</label>
                                <input type="file" name="photo" class="form-control" />
                            </div>
                            <div class=" col">
                                <label class=" form-label">موقع الفندق</label>
                                <input type="text" name="Location" class="form-control" />
                            </div>
                        </div>
                        <div class=" row">
                            <div class=" col">
                                <label class=" form-label">اسم المدينة</label>
                                <input type="text" name="City" class="form-control" />
                            </div>
                            <div class=" col">
                                <label class=" form-label">السعر</label>
                                <input type="text" name="Price" class="form-control" />
                            </div>
                        </div>
                        <div class=" row">
                            <div class=" col">
                                <label class=" form-label">تفاصيل اخرى</label>
                                <input type="text" name="Facility" class="form-control" />
                            </div>
                            
                        </div>
                        <div class=" row mt-3">
                            <div class=" col text-center">
                                <button type="submit" class=" btn btn-primary">حفظ</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
 <div class=" row mt-5">
        <div class=" col">
            <div class="card">
                <div class=" card-body">
                    <table class=" table text-center">
                        <thead>
                            <tt>
                                <td>رقم الفندق</td>
                                <td>اسم الفندق</td>
                                <td>وصف الفندق</td>
                                <td>صورة الفندق</td>
                                <td>موقع الفندق</td>
                                <td>اسم المدينة </td>
                                <td>سعر الفندق</td>
                                <td>تفاصيل اخرى</td>
                                <td class=" text-center" colspan="2">اجراء</td>
                            </tt>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.Id</td>
                                    <td>@i.Name</td>
                                    <td>@i.Description</td>
                                    <td><img src="/images/@i.Image" width="60" height="60" class="rounded rounded-circle" /></td>
                                    <td>@i.Location</td>
                                    <td>@i.City</td>
                                    <td>@i.Price</td>
                                    <td>@i.Facility</td>
                                    <td>

                                        <a onclick="showmessage(@i.Id)"><i class=" fa fa-trash text-danger" aria-hidden="true"></i></a>

                                    </td>
                                    <td>
                                        <a asp-action="edit_categories" asp-route-id="@i.Id"> <i class=" fa fa-pencil text-success" aria-hidden="true"></i></a>

                                    </td>
                                  
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div> 
</div>
